@model Movie

@{
    ViewData["Title"] = "Details";
}

@section Styles {
<style>
    body {
        background: white !important;
        color: #333 !important;
        font-weight: normal !important;
    }
    
    .text-box {
        background-color: #f8f9fa;
        color: #333;
        border: 1px solid #dee2e6;
    }
    
    header {
        background-color: #dc3545;
        color: white;
        text-align: center;
        font-family: Impact;
        border-radius: 20px;
        margin-bottom: 2rem;
        padding: 1rem;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .table {
        background-color: white;
    }
    
    .table-dark {
        background-color: #212529 !important;
    }
    
    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }
    
    .text-muted {
        color: #6c757d !important;
    }
    
    .badge {
        font-weight: 600;
    }
    
    /* Ensure proper contrast for all text */
    h1, h2, h3, h4, h5, h6 {
        color: #333;
        font-weight: bold;
    }
    
    dt {
        color: #495057;
        font-weight: 600;
    }
    
    dd {
        color: #333;
    }
    
    /* Button styling adjustments */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    
    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }
    
    /* Loading spinner visibility */
    .spinner-border {
        color: #007bff;
    }
</style>
}
<header>
    <h1>Movie Details</h1>
</header>

<div class="container-fluid bg-white py-4">
<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">@Model.Title</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.IMDB_link)
                    </dt>
                    <dd class = "col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.IMDB_link))
                        {
                            <a href="@Model.IMDB_link" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-external-link" aria-hidden="true"></i> View on IMDB
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No IMDB link available</span>
                        }
                    </dd>
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.genre)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.genre)
                    </dd>
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.ReleaseYear)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.ReleaseYear)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model.Poster != null)
        {
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="mb-0">Movie Poster</h5>
                </div>
                <div class="card-body">
                    <img src="@Url.Action("GetPosterImage", new { id = Model.ID })" alt="@Model.Title Poster" class="img-fluid img-thumbnail" style="max-height: 600px; width: auto;" />
                </div>
            </div>
        }
        else
        {
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="mb-0">Movie Poster</h5>
                </div>
                <div class="card-body text-muted">
                    <p class="mb-0">No poster available</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Actors in Movie Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Actors in this Movie</h3>
            </div>
            <div class="card-body">
                @if (Model.MovieActors != null && Model.MovieActors.Any())
                {
                    <div class="row">
                        @foreach (var movieActor in Model.MovieActors)
                        {
                            <div class="col-md-3 mb-3">
                                <div class="card h-100 border">
                                    @if (movieActor.Actor.Photo != null)
                                    {
                                        <img src="@Url.Action("GetActorPhoto", "Actors", new { id = movieActor.Actor.ID })" class="card-img-top" alt="@movieActor.Actor.Name Photo" style="height: 300px; width: 100%; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                            <span class="text-muted">No Photo</span>
                                        </div>
                                    }
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@movieActor.Actor.Name</h5>
                                        <p class="card-text">
                                            <small class="text-muted">Gender: @movieActor.Actor.Gender</small><br />
                                            <small class="text-muted">Age: @movieActor.Actor.Age</small>
                                        </p>
                                        <div class="mt-auto">
                                            <a href="@Url.Action("Details", "Actors", new { id = movieActor.Actor.ID })" class="btn btn-sm btn-primary">View Details</a>
                                            @if (!string.IsNullOrEmpty(movieActor.Actor.IMDB_link))
                                            {
                                                <a href="@movieActor.Actor.IMDB_link" target="_blank" class="btn btn-sm btn-outline-primary">IMDB</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No actors have been associated with this movie yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- AI Reviews Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">AI Generated Reviews & Sentiment Analysis</h3>
            </div>
            <div class="card-body">
                <button id="generateReviewsBtn" class="btn btn-primary mb-3" onclick="generateReviews(@Model.ID)">
                    <i class="fa fa-robot" aria-hidden="true"></i> Generate AI Reviews
                </button>
                
                <div id="reviewsLoading" class="d-none">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p class="mt-2">Generating reviews and analyzing sentiment...</p>
                    </div>
                </div>
                
                <div id="reviewsResults" class="d-none">
                    <div class="alert alert-info mb-3" id="overallSentiment"></div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="60%">Review</th>
                                    <th width="20%">Sentiment</th>
                                    <th width="20%">Score Details</th>
                                </tr>
                            </thead>
                            <tbody id="reviewsTable">
                                <!-- Reviews will be populated here -->
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div id="reviewsError" class="d-none alert alert-danger">
                    <strong>Error:</strong> Unable to generate reviews. Please try again later.
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 mb-4">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning">Edit Movie</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

</div><!-- End container-fluid -->

<script>
function generateReviews(movieId) {
    // Show loading state
    document.getElementById('generateReviewsBtn').disabled = true;
    document.getElementById('reviewsLoading').classList.remove('d-none');
    document.getElementById('reviewsResults').classList.add('d-none');
    document.getElementById('reviewsError').classList.add('d-none');
    
    // Make AJAX call to generate reviews
    fetch(`/Movies/GenerateReviews?id=${movieId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(result => {
        // Hide loading state
        document.getElementById('reviewsLoading').classList.add('d-none');
        document.getElementById('generateReviewsBtn').disabled = false;
        
        if (result.success) {
            // Show results
            displayReviews(result.data);
        } else {
            // Show error
            console.error('Server error:', result.error);
            const errorElement = document.getElementById('reviewsError');
            errorElement.innerHTML = `<strong>Error:</strong> ${result.error}`;
            errorElement.classList.remove('d-none');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        document.getElementById('reviewsLoading').classList.add('d-none');
        document.getElementById('generateReviewsBtn').disabled = false;
        document.getElementById('reviewsError').classList.remove('d-none');
    });
}

function displayReviews(data) {
    // Display overall sentiment
    const overallSentimentElement = document.getElementById('overallSentiment');
    const sentimentColor = getSentimentColor(data.overallSentimentLabel);
    overallSentimentElement.innerHTML = `
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <strong>Overall Sentiment Analysis:</strong> 
                <span class="badge ${sentimentColor} fs-6 ms-2">${data.overallSentimentLabel}</span>
            </div>
            <div class="text-end">
                <small class="text-muted">Average Score: <strong>${data.averageSentiment.toFixed(3)}</strong></small>
            </div>
        </div>
    `;
    
    // Display reviews table
    const reviewsTable = document.getElementById('reviewsTable');
    reviewsTable.innerHTML = '';
    
    data.reviews.forEach((review, index) => {
        const row = document.createElement('tr');
        const sentimentBadgeColor = getSentimentColor(review.sentimentLabel);
        
        row.innerHTML = `
            <td class="align-middle">${review.reviewText}</td>
            <td class="text-center align-middle">
                <span class="badge ${sentimentBadgeColor} fs-6">${review.sentimentLabel}</span>
            </td>
            <td class="align-middle">
                <div class="small">
                    <div><strong>Compound:</strong> <span class="text-primary">${review.compoundScore.toFixed(3)}</span></div>
                    <div><strong>Positive:</strong> <span class="text-success">${review.positiveScore.toFixed(3)}</span></div>
                    <div><strong>Negative:</strong> <span class="text-danger">${review.negativeScore.toFixed(3)}</span></div>
                    <div><strong>Neutral:</strong> <span class="text-secondary">${review.neutralScore.toFixed(3)}</span></div>
                </div>
            </td>
        `;
        
        reviewsTable.appendChild(row);
    });
    
    // Show results section
    document.getElementById('reviewsResults').classList.remove('d-none');
}

function getSentimentColor(sentiment) {
    switch (sentiment.toLowerCase()) {
        case 'positive':
            return 'bg-success';
        case 'negative':
            return 'bg-danger';
        case 'neutral':
            return 'bg-secondary';
        default:
            return 'bg-secondary';
    }
}
</script>
