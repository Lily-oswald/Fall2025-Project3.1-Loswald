@model Actor

@{
    ViewData["Title"] = "Edit";
}
<header>
    <h1>Edit</h1>
    <h4>Actor</h4>
</header>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IMDB_link" class="control-label"></label>
                <input asp-for="IMDB_link" class="form-control" type="url" placeholder="https://www.imdb.com/name/..." />
                <span asp-validation-for="IMDB_link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Non-binary">Non-binary</option>
                    <option value="Other">Other</option>
                    <option value="Prefer not to say">Prefer not to say</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" type="number" min="1" max="120" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            @if (Model.Photo != null)
            {
                <div class="form-group">
                    <label>Current Photo</label><br />
                    <img src="@Url.Action("GetActorPhoto", new { id = Model.ID })" alt="Current Photo" style="max-width: 200px; max-height: 300px;" class="img-thumbnail" />
                </div>
            }
            <div class="form-group">
                <label asp-for="PhotoFile" class="control-label"></label>
                <input asp-for="PhotoFile" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
                <small class="form-text text-muted">Upload a new photo to replace the current one (JPG, PNG, etc.)</small>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
