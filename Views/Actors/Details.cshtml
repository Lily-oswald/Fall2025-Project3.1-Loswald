@model Actor

@{
    ViewData["Title"] = "Details";
}

@section Styles {
<style>
    body {
        background: white !important;
        color: #333 !important;
        font-weight: normal !important;
    }
    
    .text-box {
        background-color: #f8f9fa;
        color: #333;
        border: 1px solid #dee2e6;
    }
    
    header {
        background-color: #dc3545;
        color: white;
        text-align: center;
        font-family: Impact;
        border-radius: 20px;
        margin-bottom: 2rem;
        padding: 1rem;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .table {
        background-color: white;
    }
    
    .table-dark {
        background-color: #212529 !important;
    }
    
    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }
    
    .text-muted {
        color: #6c757d !important;
    }
    
    .badge {
        font-weight: 600;
    }
    
    /* Ensure proper contrast for all text */
    h1, h2, h3, h4, h5, h6 {
        color: #333;
        font-weight: bold;
    }
    
    dt {
        color: #495057;
        font-weight: 600;
    }
    
    dd {
        color: #333;
    }
    
    /* Button styling adjustments */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    
    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }
    
    /* Loading spinner visibility */
    .spinner-border {
        color: #007bff;
    }
    
    /* Tweet styling */
    .tweet-text {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.4;
        border-left: 3px solid #1da1f2;
        padding-left: 12px;
        margin-bottom: 8px;
    }
    
    .tweet-card {
        border-left: 3px solid #1da1f2;
        transition: all 0.2s ease;
    }
    
    .tweet-card:hover {
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }
</style>
}
<header>
    <h1>Actor Details</h1>
</header>

<div class="container-fluid bg-white py-4">
<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">@Model.Name</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.IMDB_link)
                    </dt>
                    <dd class = "col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.IMDB_link))
                        {
                            <a href="@Model.IMDB_link" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-external-link" aria-hidden="true"></i> View on IMDB
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No IMDB link available</span>
                        }
                    </dd>
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
                    <dt class = "col-sm-3">
                        @Html.DisplayNameFor(model => model.Age)
                    </dt>
                    <dd class = "col-sm-9">
                        @Html.DisplayFor(model => model.Age)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model.Photo != null)
        {
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="mb-0">Actor Photo</h5>
                </div>
                <div class="card-body">
                    <img src="@Url.Action("GetActorPhoto", new { id = Model.ID })" alt="@Model.Name Photo" class="img-fluid img-thumbnail" style="width: 400px; height: 400px; object-fit: cover;" />
                </div>
            </div>
        }
        else
        {
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="mb-0">Actor Photo</h5>
                </div>
                <div class="card-body text-muted">
                    <p class="mb-0">No photo available</p>
                </div>
            </div>
        }
    </div>
</div>
<!-- Movies with this Actor Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">Movies with @Model.Name</h3>
            </div>
            <div class="card-body">
                @if (Model.MovieActors != null && Model.MovieActors.Any())
                {
                    <div class="row">
                        @foreach (var movieActor in Model.MovieActors)
                        {
                            <div class="col-md-3 mb-3">
                                <div class="card h-100 border">
                                    @if (movieActor.Movie.Poster != null)
                                    {
                                        <img src="@Url.Action("GetPosterImage", "Movies", new { id = movieActor.Movie.ID })" class="card-img-top" alt="@movieActor.Movie.Title Poster" style="height: 300px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                            <span class="text-muted">No Poster</span>
                                        </div>
                                    }
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@movieActor.Movie.Title</h5>
                                        <p class="card-text">
                                            <small class="text-muted">Genre: @movieActor.Movie.genre</small><br />
                                            <small class="text-muted">Year: @movieActor.Movie.ReleaseYear</small>
                                        </p>
                                        <div class="mt-auto">
                                            <a href="@Url.Action("Details", "Movies", new { id = movieActor.Movie.ID })" class="btn btn-sm btn-primary">View Details</a>
                                            @if (!string.IsNullOrEmpty(movieActor.Movie.IMDB_link))
                                            {
                                                <a href="@movieActor.Movie.IMDB_link" target="_blank" class="btn btn-sm btn-outline-primary">IMDB</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">This actor has not been associated with any movies yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- AI Generated Twitter Tweets Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">
                    <i class="fab fa-twitter text-primary"></i> AI Generated Twitter Buzz & Sentiment Analysis
                </h3>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">
                    See what people might be saying about <strong>@Model.Name</strong> on Twitter!
                </p>
                
                <button id="generateTweetsBtn" class="btn btn-primary mb-3" onclick="generateTweets(@Model.ID)">
                    <i class="fab fa-twitter" aria-hidden="true"></i> Generate Twitter Buzz
                </button>
                
                <div id="tweetsLoading" class="d-none">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p class="mt-2">Generating tweets and analyzing sentiment...</p>
                    </div>
                </div>
                
                <div id="tweetsResults" class="d-none">
                    <div class="alert alert-info mb-3" id="overallTwitterSentiment"></div>
                    
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="75%">Tweet</th>
                                    <th width="25%">Sentiment Analysis</th>
                                </tr>
                            </thead>
                            <tbody id="tweetsTable">
                                <!-- Tweets will be populated here -->
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div id="tweetsError" class="d-none alert alert-danger">
                    <strong>Error:</strong> Unable to generate tweets. Please try again later.
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 mb-4">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning">Edit Actor</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

</div><!-- End container-fluid -->

<script>
function generateTweets(actorId) {
    // Show loading state
    document.getElementById('generateTweetsBtn').disabled = true;
    document.getElementById('tweetsLoading').classList.remove('d-none');
    document.getElementById('tweetsResults').classList.add('d-none');
    document.getElementById('tweetsError').classList.add('d-none');
    
    // Make AJAX call to generate tweets
    fetch(`/Actors/GenerateTweets?id=${actorId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(result => {
        // Hide loading state
        document.getElementById('tweetsLoading').classList.add('d-none');
        document.getElementById('generateTweetsBtn').disabled = false;
        
        if (result.success) {
            // Show results
            displayTweets(result.data);
        } else {
            // Show error
            console.error('Server error:', result.error);
            const errorElement = document.getElementById('tweetsError');
            errorElement.innerHTML = `<strong>Error:</strong> ${result.error}`;
            errorElement.classList.remove('d-none');
        }
    })
    .catch(error => {
        console.error('Network error:', error);
        document.getElementById('tweetsLoading').classList.add('d-none');
        document.getElementById('generateTweetsBtn').disabled = false;
        document.getElementById('tweetsError').classList.remove('d-none');
    });
}

function displayTweets(data) {
    // Display overall sentiment
    const overallSentimentElement = document.getElementById('overallTwitterSentiment');
    const sentimentColor = getSentimentColor(data.overallSentimentLabel);
    overallSentimentElement.innerHTML = `
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <strong>Overall Twitter Sentiment about ${data.actorName}:</strong> 
                <span class="badge ${sentimentColor} fs-6 ms-2">${data.overallSentimentLabel}</span>
            </div>
            <div class="text-end">
                <small class="text-muted">Average Score: <strong>${data.averageSentiment.toFixed(3)}</strong></small>
            </div>
        </div>
    `;
    
    // Display tweets table
    const tweetsTable = document.getElementById('tweetsTable');
    tweetsTable.innerHTML = '';
    
    data.tweets.forEach((tweet, index) => {
        const row = document.createElement('tr');
        const sentimentBadgeColor = getSentimentColor(tweet.sentimentLabel);
        
        row.innerHTML = `
            <td class="align-middle">
                <div class="tweet-text">
                    <i class="fab fa-twitter text-primary me-2"></i>
                    ${tweet.tweetText}
                </div>
            </td>
            <td class="text-center align-middle">
                <div class="mb-2">
                    <span class="badge ${sentimentBadgeColor} fs-6">${tweet.sentimentLabel}</span>
                </div>
                <div class="small">
                    <div><strong>Score:</strong> <span class="text-primary">${tweet.compoundScore.toFixed(3)}</span></div>
                    <div><span class="text-success">${tweet.positiveScore.toFixed(2)}</span> | <span class="text-danger">${tweet.negativeScore.toFixed(2)}</span> | <span class="text-secondary">${tweet.neutralScore.toFixed(2)}</span></div>
                </div>
            </td>
        `;
        
        tweetsTable.appendChild(row);
    });
    
    // Show results section
    document.getElementById('tweetsResults').classList.remove('d-none');
}

function getSentimentColor(sentiment) {
    switch (sentiment.toLowerCase()) {
        case 'positive':
            return 'bg-success';
        case 'negative':
            return 'bg-danger';
        case 'neutral':
            return 'bg-secondary';
        default:
            return 'bg-secondary';
    }
}
</script>
